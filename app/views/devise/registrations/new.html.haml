= render partial:"shared/header"
.sign_box.row
  .sign_main.mx-auto
    %h2.sign_title 新規ユーザー登録
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .outside_field#upper
        .field
          .field__input
            .field__input__label
              = f.label :nickname, "ニックネーム"
            = f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "input", placeholder:"8文字以内"
        .field
          .field__input
            .field__input__label
              = f.label :email, "メールアドレス"
            = f.email_field :email, autofocus: true, autocomplete: "email", class: "input"
        .field
          .field__input
            .field__input__label
              = f.label :password, "パスワード"
            = f.password_field :password, autocomplete: "new-password", class: "input", placeholder:"7文字以上"
        .field
          .field__input
            .field__input__label
              = f.label :password_confirmation, "パスワード再入力"
            = f.password_field :password_confirmation, autocomplete: "new-password", class: "input", placeholder:"打ち間違えのないように注意"
        .radio
          = f.label :sex, "男性"
          = f.radio_button :sex, "男"
        .radio
          = f.label :sex, "女性"
          = f.radio_button :sex, "女"
      

        .field.row
          = f.submit "新規登録", class:'btn btn-primary mx-auto submit_btn'
      .outside_field#lower
        .field
          .login_text
            アカウントをお持ちの方はこちら
        .field.row
          = link_to'ログイン', new_user_session_path, class: 'btn btn-success lower_btn mx-auto'
