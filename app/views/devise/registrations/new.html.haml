= render partial:"shared/header"
.sign_box.row
  .col-12.col-sm-10.col-md-6.mx-auto
    .sign_main.mx-auto
      %h2.sign_title 新規ユーザー登録
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        .outside_field#upper
          .field
            .field__input
              ニックネーム
            = f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "input col-12", placeholder:"8文字以内"
            - if resource.errors.any?
              %ul.error-message
                - resource.errors.full_messages_for(:nickname).each do |message|
                  %li= message
          .field
            .field__input
              メールアドレス
            = f.email_field :email, autofocus: true, autocomplete: "email", class: "input col-12"
            - if resource.errors.any?
              .error-message
                = resource.errors.full_messages_for(:email).first
          .field
            .field__input
              パスワード
            = f.password_field :password, autocomplete: "new-password", class: "password input col-12", placeholder:"7文字以上15文字以内"
            - if resource.errors.any?
              .error-message
                = resource.errors.full_messages_for(:password).first
          .field
            .field__input
              パスワード再入力
            = f.password_field :password_confirmation, autocomplete: "new-password", class: "password input col-12", placeholder:"打ち間違えのないように注意"
            - if resource.errors.any?
              %ul.error-message
                - resource.errors.full_messages_for(:password_confirmation).each do |message|
                  %li= message

          パスワードを
          %input#passcheck{:type => "checkbox"}

          .field
            = f.label :sex, "性別", class: "col-3 px-0"
            .col-12.text-center
              クリックで切り替えられます
            .col-12.text-center
              %span{style: 'color: blue'} 男性　
              ⇄　
              %span{style: 'color: red'} 女性
            .row
              .mx-auto
                = f.check_box :sex, { :checked => "checked", id: "sign_up-toggle" }, "男性", "女性"

          .field.row
            = f.submit "新規登録", class:'btn btn-primary mx-auto submit_btn', style: "margin-top: 20px"
        .outside_field#lower
          .field
            .login_text.text-center
              アカウントをお持ちの方はこちら
          .field.row
            = link_to'ログイン', new_user_session_path, class: 'btn btn-success lower_btn mx-auto'
